  <div class="container-gallery">
    <div class="animate-on-scroll">
      <div class="container-gallery__wrapper" id="gallery">
        <div class="gallery-title">
          Галерея
          <div class="gallery-button-wrapper-mobile">
            <div class="gallery-button-mobile-left"><img src="/assets/image/row-mobile-left.svg" alt="row"></div>
            <div class="gallery-button-mobile-right"><img src="/assets/image/row-mobile.svg" alt="row"></div>
          </div>
        </div>
        <div class="gallery-navigation">
          <div class="gallery-button-left"><img src="/assets/image/row-left.svg" alt="row"></div>
          <div class="gallery-wrapper">
            <%if (gallery.length> 0) { %> <% gallery.forEach((post)=> { %>
                <div class="galleryElement1">
                  <div class="galleryElement1__img"><img src="<%= post.img %>" alt="photo"></div>
                  <div class="galleryElement1__data">
                    <%- new Date(post.date).toISOString().split('T')[0] %>
                  </div>
                  <div class="galleryElement1__text">
                    <%=post.description %>
                  </div>
                </div>
                <% }) %>
                  <% } else {%>
                    <div class="col-lg-8 offset-lg-2 text-center">
                      <div class="section-title">
                        <h3 style="color: #413a3a"><span class="orange-text">Opps</span>...</h3>
                        <b style="color: #413a3a"> At this moment, there are not any posts </b>
                      </div>
                    </div>
                    <%}%>
          </div>
          <div class="gallery-button-right"><img src="/assets/image/row-right.svg" alt="row"></div>
          <div id="popup" class="popup-overlay">
            <div class="popup-content">
              <img id="popupImage" src="" alt="Popup Image">
            </div>
          </div>

        </div>
      </div>
    </div>
